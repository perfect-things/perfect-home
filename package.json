{
	"name": "perfect-home",
	"description": "Firefox/Chrome new tab replacement",
	"version": "0.14.2",
	"author": "PerfectThings",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/perfect-things/perfect-home"
	},
	"scripts": {
		"ext:start": "web-ext run --no-reload -s ./dist -p test-profile --keep-profile-changes",
		"ext:lint": "web-ext lint -s ./dist",
		"ext:build": "web-ext build --overwrite-dest -s ./dist",
		"src:start": "gulp watch",
		"dist": "gulp build --prod",
		"build": "gulp build && npm run ext:build",
		"watch": "run-p ext:start src:start",
		"start": "run-s build watch"
	},
	"license": "GPL-3.0-or-later",
	"devDependencies": {
		"@esbuild-plugins/node-resolve": "^0.2.2",
		"chalk": "^5.4.1",
		"del": "^8.0.0",
		"detect-indent": "^7.0.1",
		"eslint": "^8.57.1",
		"esbuild-svelte": "^0.7.4",
		"eslint-import-resolver-custom-alias": "^1.3.2",
		"eslint-plugin-import": "^2.28.0",
		"eslint-plugin-svelte": "^2.32.4",
		"gulp": "^4.0.2",
		"gulp-clean-css": "^4.3.0",
		"gulp-concat": "^2.6.1",
		"gulp-env": "^0.4.0",
		"gulp-esbuild": "^0.14.0",
		"gulp-eslint-new": "^1.8.3",
		"gulp-livereload": "^4.0.2",
		"gulp-sourcemaps": "^3.0.0",
		"gulp-stylus": "^3.0.1",
		"inquirer": "^9.3.7",
		"npm-run-all": "^4.1.5",
		"open": "^9.1.0",
		"ora": "^7.0.1",
		"semver": "^7.7.0",
		"simple-git": "^3.27.0",
		"svelte": "^4.2.19",
		"through2": "^4.0.2",
		"web-ext": "^7.12.0",
		"webextension-polyfill": "^0.12.0"
	},
	"dependencies": {
		"sortablejs": "^1.15.6"
	},
	"webExt": {
		"sourceDir": "dist/",
		"ignoreFiles": [
			"package.json",
			"package-lock.json",
			"release.js",
			"gulpfile.js",
			"config-prod.json"
		]
	}
}

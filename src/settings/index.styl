@import "../ui/lib.styl"


.icon-btn.btn-settings
	right 8
	top 6
	z-index 12
	transition transform var(--animation-speed) ease-out, color var(--animation-speed) ease-out
	transform-origin center
	border-radius 20

	&.hidden
		transform rotate(-90deg)

	svg
		height 20
		width 20
		margin 2 0 0 0

.settings-form
	display flex
	flex-flow column
	align-items stretch
	margin 0
	font inherit
	font-size 15px


.settings-row
	display flex
	flex-flow row
	align-items flex-start
	justify-content space-between
	margin-bottom 20
	flex-wrap wrap


.settings-pane
	position absolute
	background-color var(--color-background-alt)
	top 0
	right 0
	bottom 0
	width 300
	min-height 300
	box-shadow -2px 0 5px #0008
	z-index 11
	overflow-y auto
	color var(--color-text)

	h1
		margin 0
		padding 13 0 12 20
		top 0
		position -webkit-sticky
		position sticky
		background-color var(--color-background-alt)
		z-index 1

	h3
		margin 0 0 10
		opacity 0.8

		&:first-child
			margin-top -16


	label
		display block
		margin 0 5 0 0

	.select-wrap
		flex 1


	input + input
		margin 0 0 0 10

	input[type="text"]
		width 160

	input.inp-short
		width 75

	.btn
		flex 1
		display flex
		align-items center
		justify-content center

	.xbtn
		padding 0 5
		flex unset
		width 38
		margin-left 10
		font-size 23px
		min-height 33px
		height 33px

	.btn-export
		margin-right 10

	div.btn
		position relative
		overflow hidden

	small
		display block
		flex 1
		min-width 100%
		margin-bottom 15

		a
			color  var(--color-accent)
			text-decoration none

			&:hover
				text-decoration underline

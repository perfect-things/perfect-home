@import "lib"

.select-wrap
textarea
input[type=text]
input[type="color"]
	font inherit
	height 34
	border color-bg-dark
	background-color color-bg-dark
	color color-text
	transition background-color .3s ease-out, border-color .3s ease-out, box-shadow .3s ease-out
	border-radius 4px

	&:invalid
		border-color color-danger
		box-shadow 0 0 2px 1px color-danger
		outline none

	&:disabled
		opacity 0.5

	&:focus
	&:focus-within
		border-color color-accent
		box-shadow 0 0 2px 1px color-accent
		outline none




.select-wrap
	position relative
	&:after
		content ''
		position absolute
		width 20
		height 12
		right 0
		top 10
		pointer-events none
		background-repeat no-repeat
		background-position right .75rem center
		background-size 8px 10px
		background-image url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 4 5'%3E%3Cpath fill='%23eeeeee' d='M2 0L0 2h4zm0 5L0 3h4z'/%3E%3C/svg%3E")


select
	font inherit
	color inherit
	border none
	background none
	background-color inherit
	line-height 16px
	padding 2 22 0 10
	width 100%
	height 100%
	text-indent -2px
	-moz-appearance none
	appearance none


textarea
input[type=text]
	line-height 16px
	padding 2 5


textarea
	min-height 2.4em
	resize vertical
	flex 1


input[type=checkbox]
input[type=radio]
	vertical-align inherit
	transform scale(1.4)
	filter hue-rotate(-12deg) saturate(.4)
	margin-right 6px


input[type="color"]
	-moz-appearance none
	appearance none
	background none
	border none
	padding 0


input[type=file]
	position absolute
	right -500px


label
	display inline-block
	margin-top 1
	vertical-align top

	&.disabled
		opacity 0.3
